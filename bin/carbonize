#!/usr/bin/env bash
set -e

main() {
	cd $(dirname $BASH_SOURCE)/..
	export PATH="$PATH:$PWD/node_modules/.bin"

	loop_dirs
}

loop_dirs() {
	find . -maxdepth 1 -type d | while read d; do
		echo "$d"
		# pushd "$d"
		# loop_images
		# popd
	done
}

loop_images() {
	mkdir -p images

	find . -maxdepth 1 -type f | while read f; do
		carbon "$(basename $f)"
	done
}

carbon() {
	# carbon-now --headless timing.ts --target images/timing.ts
	echo carbon-now --headless "$1" --target images/"$1"
	# carbon-now --headless "$1" --target images/"$1"
}

main
